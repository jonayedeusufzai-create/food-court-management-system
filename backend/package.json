{
  "name": "thetreehousse-backend",
  "version": "1.0.0",
  "description": "Backend for TheTreeHousse Food Court Management System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch"
