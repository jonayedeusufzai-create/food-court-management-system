    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-validator": "^6.14.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.8.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.8.0",
    "rate-limiter-flexible": "^7.3.0",
    "socket.io": "^4.5.4",
    "socket.io-client": "^4.5.4",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.1"
  },
  "jest": {
